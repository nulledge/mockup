<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/avatar"
        android:id="@+id/imageView" />

    <LinearLayout
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/messageListItemReceiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="1588-8000"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/messageListItemDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="5dp"
                android:text="12:36 PM"
                android:textColor="@android:color/darker_gray"
                android:textSize="17dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/messageListItemText"
            android:paddingTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@android:color/darker_gray"
            android:text="AAA\nbbb\nccc\n"
            android:maxLines="2"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/messageListDelete"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:src="@drawable/garbage"
        android:background="#CF00"/>

</LinearLayout>